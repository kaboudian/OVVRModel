#version 300 es
/*@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@
 * s2initShader :   jhee, jaii, vvxc, cccc, kknn
 *
 * PROGRAMMER   :   ABOUZAR KABOUDIAN
 * DATE         :   Wed 19 Jul 2017 12:31:30 PM EDT
 * PLACE        :   Chaos Lab @ GaTech, Atlanta, GA
 *@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@
 */
precision highp float;

/*------------------------------------------------------------------------
 * Interface variables 
 *------------------------------------------------------------------------
 */
in vec2 pixPos ;
uniform float   minVlt, maxVlt ;
uniform bool    restInitCond ;

/*------------------------------------------------------------------------
 * outputs
 *------------------------------------------------------------------------
 */
layout (location = 0 )  out vec4  mhhjOut ;
layout (location = 1 )  out vec4  hjmhOut ;
layout (location = 2 )  out vec4  jheeOut ;
layout (location = 3 )  out vec4  jaiiOut ;
layout (location = 4 )  out vec4  vvxcOut ;
layout (location = 5 )  out vec4  ccccOut ;
layout (location = 6 )  out vec4  kknnOut ;
layout (location = 7 )  out vec4  ttxrOut ;

/*========================================================================
 * Main body of the shader
 *========================================================================
 */
void main() {

/*------------------------------------------------------------------------
 * 
 *------------------------------------------------------------------------
 */
    mhhjOut = vec4( 0.0074621 ,     /* m                */
                    0.692591 ,      /* hfast            */
                    0.692574 ,      /* hslow            */
                    0.692477        /* j                */  ) ;

/*------------------------------------------------------------------------
 * 
 *------------------------------------------------------------------------
 */
    hjmhOut = vec4( 0.448501,       /* hCaMKslow        */
                    0.692413,       /* jCaMK            */
                    0.000194015,    /* mL               */
                    0.496116        /* hL               */  ) ;
                    
/*------------------------------------------------------------------------
 * location 0 : jhee
 *------------------------------------------------------------------------
 */
    jheeOut = vec4( 2.53943e-5  ,   /* JrelNP           */
                    0.265885 ,      /* hLCaMK           */
                    0.0 ,           /* empty            */
                    0.0             /* empty            */  ) ;

/*------------------------------------------------------------------------
 * location 1 : haii
 *------------------------------------------------------------------------
 */
    jaiiOut = vec4( 3.17262e-7 ,    /* JrelCaMK         */
                    0.00101185 ,    /* a                */
                    0.999542 ,      /* ifast            */
                    0.589579        /* iFlow            */  ) ;

/*------------------------------------------------------------------------
 * location 0 : vvxc
 *------------------------------------------------------------------------
 */
    float   vlt = -87.84 ;
    if ( !restInitCond )
        if (pixPos.x<0.2)
            vlt = 0. ;
    float   v   = ( vlt - minVlt )/(maxVlt - minVlt) ;

    vvxcOut = vec4( vlt,        /* membrane potential   */ 
                    v,          /* scaled potential     */
                    0.996801 ,  /* xK1                  */
                    0.0124065   /* CaMKtrap             */  ) ; 

/*------------------------------------------------------------------------
 * location 1 : cccc
 *------------------------------------------------------------------------
 */
    ccccOut = vec4( 1.61 ,      /* Cansr                */
                    1.56 ,      /* Cajsr                */
                    8.43e-5 ,   /* Cass                 */
                    8.54e-5     /* Cai                  */  ) ;

/*------------------------------------------------------------------------
 * location 2 : kknn
 *------------------------------------------------------------------------
 */
    kknnOut = vec4( 143.79 ,    /* Kss                  */
                    143.79 ,    /* Ki                   */
                    7.23 ,      /* Nass                 */
                    7.23        /* Nai                  */  ) ;

/*------------------------------------------------------------------------
 * location 7: ttxr -- time texture
 *------------------------------------------------------------------------
 */
    ttxrOut = vec4 (vlt, 0.,0.,0.)  ;

              
    return ;
}
